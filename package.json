{
  "name": "trendyjs",
  "version": "1.0.0",
  "description": "Open API about JS libs, framewroks and node modules trends.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/octo-web-front-end-tribe/trendyjs.git"
  },
  "author": "Jérémy Buget",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/octo-web-front-end-tribe/trendyjs/issues"
  },
  "homepage": "https://github.com/octo-web-front-end-tribe/trendyjs#readme",
  "dependencies": {
    "blipp": "^2.3.0",
    "bookshelf": "^0.10.2",
    "boom": "^4.2.0",
    "bunyan": "^1.8.5",
    "github-api": "^2.3.0",
    "hapi": "^16.0.1",
    "hapi-swagger": "^7.4.0",
    "inert": "^4.0.3",
    "knex": "^0.12.6",
    "lodash": "^4.17.2",
    "pg": "^6.1.0",
    "request": "^2.79.0",
    "sqlite3": "^3.1.8",
    "stackexchange": "^0.4.0",
    "vision": "^4.1.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.11.1",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-import": "^2.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "sinon": "^1.17.6"
  },
  "scripts": {
    "clean": "rm -rf node_modules",
    "start": "node bin/www",
    "start:watch": "./node_modules/.bin/nodemon bin/www | ./node_modules/.bin/bunyan",
    "start:debug": "node debug bin/www",
    "db:migrate": "./node_modules/.bin/knex migrate:latest --knexfile ./lib/knexfile.js",
    "db:seed": "./node_modules/.bin/knex seed:run --knexfile ./lib/knexfile.js",
    "db:reset": "rm -rf lib/db/data/*.sqlite3 && npm run db:migrate && npm run db:seed",
    "postinstall": "npm run db:reset",
    "test": "NODE_ENV=test npm run db:reset && NODE_ENV=test ./node_modules/.bin/mocha --recursive",
    "test:watch": "npm test -- --watch",
    "coverage": "NODE_ENV=test npm run db:reset && NODE_ENV=test ./node_modules/.bin/istanbul cover _mocha -- --recursive",
    "lint": "./node_modules/.bin/eslint lib/**",
    "lint:watch": "./node_modules/.bin/nodemon ./node_modules/.bin/eslint lib/**"
  }
}
